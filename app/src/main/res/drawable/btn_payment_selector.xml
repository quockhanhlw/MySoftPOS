<?xml version="1.0" encoding="utf-8"?>
<!-- Neo-Fintech Payment Button Selector: Cyan to Blue Gradient -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State (Darkened) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="@color/neo_btn_pressed_start"
                android:endColor="@color/neo_btn_pressed_end" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Default State -->
    <item>
        <layer-list>
            <!-- Shadow Layer -->
            <item android:bottom="4dp" android:right="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#40000000" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
            <!-- Main Gradient -->
            <item android:top="0dp" android:left="0dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="0"
                        android:startColor="@color/neo_btn_gradient_start"
                        android:endColor="@color/neo_btn_gradient_end" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
