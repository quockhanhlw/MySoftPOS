<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.NFC" />
    <uses-feature android:name="android.hardware.nfc" android:required="true" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.MySoftPOS">

        <!-- Auth Activities -->
        <activity
            android:name=".ui.auth.WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false" />

        <activity
            android:name=".ui.auth.ForgotPasswordActivity"
            android:exported="false" />

        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false" />

        <!-- Settings Activity -->
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="false"
            android:label="@string/settings_title" />

        <!-- Dashboard Activity -->
        <activity
            android:name=".ui.dashboard.MainDashboardActivity"
            android:exported="false"
            android:label="@string/dashboard_title" />

        <!-- Test Suite Activities -->
        <activity android:name=".testsuite.RunnerActivity" android:label="Test Runner" />
        <activity android:name=".testsuite.ChannelSelectActivity" android:label="Select Channel" />
        <activity android:name=".testsuite.TransactionSelectActivity" android:label="Select Transaction" />
        <activity android:name=".testsuite.SchemeSelectActivity" android:label="Select Scheme" />
        <activity android:name=".testsuite.TestSuiteActivity" android:label="Test Suite" />
        <activity android:name=".testsuite.DynamicTestSuiteActivity" android:label="Test Suites" />
        <activity android:name=".testsuite.DynamicTestCaseActivity" android:label="Test Cases" />

        <!-- Purchase Activities -->
        <activity
            android:name=".ui.purchase.PurchaseAmountActivity"
            android:exported="false"
            android:label="Purchase" />

        <activity
            android:name=".ui.purchase.PurchaseCardActivity"
            android:exported="false"
            android:label="Card" />

        <activity
            android:name=".ui.purchase.PaymentSuccessActivity"
            android:exported="false"
            android:label="Success" />

        <!-- Balance Inquiry Activity -->
        <activity
            android:name=".ui.balance.BalanceInquiryActivity"
            android:exported="false"
            android:label="Balance Inquiry" />

        <!-- Result Activity -->
        <activity
            android:name=".ui.result.TransactionResultActivity"
            android:exported="false"
            android:label="Kết quả" />

    </application>

</manifest>