<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC">

    <!-- Header Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/bg_header_curved"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="32dp"
            android:paddingBottom="48dp">

            <!-- Nav Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_back"
                    android:padding="8dp"
                    android:background="@drawable/bg_glass_card"
                    app:tint="#FFFFFF"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/register_title"
                    android:fontFamily="sans-serif-bold"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/register_description"
                android:textColor="#E2E8F0"
                android:textSize="14sp"/>

            <!-- Main Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Account Type Selection -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_account_type"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#64748B"
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:baselineAligned="false">

                        <!-- Personal Card -->
                        <LinearLayout
                            android:id="@+id/cardPersonal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:background="@drawable/selector_card_selection"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center">
                            
                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_personal_user"
                                app:tint="#0F766E"/>
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/register_personal"
                                android:fontFamily="sans-serif-bold"
                                android:textColor="#0F766E"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <Space android:layout_width="12dp" android:layout_height="wrap_content"/>

                        <!-- Business Card -->
                        <LinearLayout
                            android:id="@+id/cardBusiness"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:background="@drawable/selector_card_selection"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_business_building"
                                app:tint="#64748B"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/register_business"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="#64748B"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Form Fields -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_account_number"
                        android:layout_marginTop="24dp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#64748B"
                        android:textSize="14sp"/>
                    <EditText
                        android:id="@+id/etAccountNumber"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_input_premium"
                        android:hint="@string/register_account_number_hint"
                        android:paddingHorizontal="16dp"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_bank_name"
                        android:layout_marginTop="16dp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#64748B"
                        android:textSize="14sp"/>
                    <EditText
                        android:id="@+id/etBankName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_input_premium"
                        android:hint="@string/register_bank_name_hint"
                        android:paddingHorizontal="16dp"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_account_name"
                        android:layout_marginTop="16dp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#64748B"
                        android:textSize="14sp"/>
                    <EditText
                        android:id="@+id/etAccountName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_input_premium"
                        android:hint="@string/register_account_name_hint"
                        android:paddingHorizontal="16dp"
                        android:textSize="14sp"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_password"
                        android:layout_marginTop="16dp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#64748B"
                        android:textSize="14sp"/>
                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_input_premium"
                        android:inputType="textPassword"
                        android:hint="@string/register_password_hint"
                        android:paddingHorizontal="16dp"
                        android:textSize="14sp"/>

                    <!-- Terms -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal"
                        android:gravity="top">
                        <CheckBox
                            android:id="@+id/cbTerms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/neo_primary"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:layout_marginEnd="8dp"/>
                        <TextView
                            android:id="@+id/tvTermsText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/register_terms_text"
                            android:textColor="#64748B"
                            android:textSize="13sp"
                            android:lineSpacingExtra="2dp"/>
                    </LinearLayout>

                    <!-- Register Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRegister"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="32dp"
                        android:text="@string/register_button"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-bold"
                        app:cornerRadius="30dp"
                        android:backgroundTint="@color/neo_primary"
                        android:stateListAnimator="@null"
                        android:elevation="4dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>