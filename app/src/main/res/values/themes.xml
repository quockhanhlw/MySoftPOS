<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Material Design 3 Theme -->
    <style name="Theme.MySoftPOS" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Color Schemata -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/background</item>
        <item name="colorOnPrimaryContainer">@color/primary</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Surface & Text -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Input Fields -->
        <item name="android:editTextColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <item name="colorError">@color/error</item>
        
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Typography: Sans-serif default -->
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- App Button Style (MD3) -->
    <style name="AppButtonPrimary" parent="Widget.Material3.Button">
        <item name="android:paddingVertical">12dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <!-- App Text Button Style -->
    <style name="AppButtonText" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
    </style>



</resources>
