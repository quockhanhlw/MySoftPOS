<?xml version="1.0" encoding="utf-8"?>
<!-- Payment Amount Entry Screen - Premium Design with Currency Selector -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_light">

    <!-- ══════════════════════════════════════════════════════════════════ -->
    <!--                    HEADER: Back Arrow + Title                      -->
    <!-- ══════════════════════════════════════════════════════════════════ -->
    <FrameLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start|center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:scaleType="centerInside"
            android:padding="8dp"
            app:tint="@color/neo_primary_dark"
            android:contentDescription="Back" />

        <!-- Centered Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Enter the amount"
            android:textSize="18sp"
            android:textColor="@color/neo_primary_dark"
            android:fontFamily="sans-serif-medium" />
    </FrameLayout>

    <!-- ══════════════════════════════════════════════════════════════════ -->
    <!--                    AMOUNT DISPLAY (Currency + Value + Cursor)      -->
    <!-- ══════════════════════════════════════════════════════════════════ -->
    <LinearLayout
        android:id="@+id/amountContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintBottom_toTopOf="@id/numpadContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.35">

        <!-- Currency Selector (Swipeable) -->
        <LinearLayout
            android:id="@+id/currencySelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="12dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <!-- Up Arrow Hint -->
            <ImageView
                android:layout_width="16dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_arrow_up"
                android:alpha="0.4"
                app:tint="@color/neo_primary_dark" />

            <!-- Currency Code -->
            <TextView
                android:id="@+id/tvCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VND"
                android:textSize="22sp"
                android:textColor="@color/neo_primary_dark"
                android:fontFamily="sans-serif-bold"
                android:paddingVertical="4dp" />

            <!-- Down Arrow Hint -->
            <ImageView
                android:layout_width="16dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_arrow_down"
                android:alpha="0.4"
                app:tint="@color/neo_primary_dark" />
        </LinearLayout>

        <!-- Amount Value -->
        <TextView
            android:id="@+id/tvAmountDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="56sp"
            android:textColor="@color/neo_primary_dark"
            android:fontFamily="sans-serif-bold"
            tools:text="27,90" />

        <!-- Blinking Cursor -->
        <View
            android:id="@+id/cursorView"
            android:layout_width="3dp"
            android:layout_height="48dp"
            android:layout_marginStart="4dp"
            android:background="@color/neo_primary_dark" />
    </LinearLayout>

    <!-- Currency Hint Text -->
    <TextView
        android:id="@+id/tvCurrencyHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swipe currency to change"
        android:textSize="12sp"
        android:textColor="#888888"
        android:fontFamily="sans-serif"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/amountContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ══════════════════════════════════════════════════════════════════ -->
    <!--                    NUMPAD CONTAINER (Initially Hidden)             -->
    <!-- ══════════════════════════════════════════════════════════════════ -->
    <LinearLayout
        android:id="@+id/numpadContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingHorizontal="24dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/btnCharge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Row 1: 1, 2, 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button android:id="@+id/btn1" style="@style/NumpadCircleButton" android:text="1" />
            <Button android:id="@+id/btn2" style="@style/NumpadCircleButton" android:text="2" />
            <Button android:id="@+id/btn3" style="@style/NumpadCircleButton" android:text="3" />
        </LinearLayout>

        <!-- Row 2: 4, 5, 6 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button android:id="@+id/btn4" style="@style/NumpadCircleButton" android:text="4" />
            <Button android:id="@+id/btn5" style="@style/NumpadCircleButton" android:text="5" />
            <Button android:id="@+id/btn6" style="@style/NumpadCircleButton" android:text="6" />
        </LinearLayout>

        <!-- Row 3: 7, 8, 9 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button android:id="@+id/btn7" style="@style/NumpadCircleButton" android:text="7" />
            <Button android:id="@+id/btn8" style="@style/NumpadCircleButton" android:text="8" />
            <Button android:id="@+id/btn9" style="@style/NumpadCircleButton" android:text="9" />
        </LinearLayout>

        <!-- Row 4: Backspace, 0, Empty -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btnBackspace"
                style="@style/NumpadCircleButton"
                android:src="@drawable/ic_backspace"
                android:scaleType="centerInside"
                android:contentDescription="Delete"
                app:tint="@color/neo_primary_dark" />
            <Button android:id="@+id/btn0" style="@style/NumpadCircleButton" android:text="0" />
            <View
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- ══════════════════════════════════════════════════════════════════ -->
    <!--                    CHARGE BUTTON (Bottom)                          -->
    <!-- ══════════════════════════════════════════════════════════════════ -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCharge"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="32dp"
        android:text="CHARGE"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/neo_primary_dark"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
