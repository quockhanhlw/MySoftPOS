<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Glow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#1A3B82F6" />
            <size android:width="180dp" android:height="180dp" />
        </shape>
    </item>
    <!-- Inner Glow -->
    <item android:left="20dp" android:top="20dp" android:right="20dp" android:bottom="20dp">
        <shape android:shape="oval">
            <solid android:color="#333B82F6" />
        </shape>
    </item>
    <!-- Center Circle -->
    <item android:left="40dp" android:top="40dp" android:right="40dp" android:bottom="40dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50dp"
                android:startColor="@color/gradient_start"
                android:endColor="@color/gradient_end" />
            <stroke
                android:width="2dp"
                android:color="@color/glass_stroke_light" />
        </shape>
    </item>
</layer-list>
