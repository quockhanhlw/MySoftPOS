<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected State -->
    <item android:state_checked="true">
        <shape>
            <solid android:color="#F0FDFA" /> <!-- Light Teal Bg -->
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="#0F766E" /> <!-- Primary Teal Border -->
        </shape>
    </item>
    
    <!-- Default State -->
    <item>
        <shape>
            <solid android:color="@android:color/white" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="#E2E8F0" /> <!-- Light Grey Border -->
        </shape>
    </item>
</selector>
