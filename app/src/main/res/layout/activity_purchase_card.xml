<?xml version="1.0" encoding="utf-8"?>
<!-- Purchase Card Screen - Tab-based Entry: Manual Entry | Mock Track 2 -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header -->
    <FrameLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start|center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:scaleType="centerInside"
            android:padding="8dp"
            app:tint="@color/neo_primary_dark"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Payment"
            android:textSize="18sp"
            android:textColor="@color/neo_primary_dark"
            android:fontFamily="sans-serif-medium" />
    </FrameLayout>

    <!-- Tab Layout: Manual Entry | Mock Track 2 -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/neo_primary_dark"
        app:tabSelectedTextColor="@color/neo_primary_dark"
        app:tabTextColor="@color/neo_text_label"
        app:tabIndicatorHeight="2dp"
        app:tabRippleColor="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/headerContainer">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manual Entry" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mock Track 2" />
    </com.google.android.material.tabs.TabLayout>

    <!-- Manual Entry Card (Tab 0) - CENTERED & LARGER -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardManualEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintBottom_toTopOf="@id/amountContainer"
        app:layout_constraintVertical_bias="0.4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Number (PAN)"
                android:textSize="16sp"
                android:textColor="@color/neo_text_secondary" />

            <EditText
                android:id="@+id/etPan"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:inputType="number"
                android:maxLength="19"
                android:textSize="18sp"
                android:hint="1234 5678 9012 3456"
                android:background="@drawable/bg_input_rounded"
                android:paddingHorizontal="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Expiry Date (YYMM)"
                android:textSize="16sp"
                android:textColor="@color/neo_text_secondary" />

            <EditText
                android:id="@+id/etExpiry"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:inputType="number"
                android:maxLength="4"
                android:textSize="18sp"
                android:hint="2512"
                android:background="@drawable/bg_input_rounded"
                android:paddingHorizontal="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmitManual"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:text="Pay"
                android:textSize="18sp"
                app:backgroundTint="@color/neo_primary_dark"
                app:cornerRadius="14dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Mock Track 2 Card (Tab 1) - CENTERED & LARGER -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMockTrack2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:visibility="gone"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintBottom_toTopOf="@id/amountContainer"
        app:layout_constraintVertical_bias="0.4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center">

            <!-- NFC Icon - LARGER -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNfcIcon"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:cardBackgroundColor="#F0F4F8"
                app:cardCornerRadius="80dp"
                app:cardElevation="0dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_nfc"
                    app:tint="@color/neo_primary_dark" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Tap to use Mock Track 2"
                android:textSize="18sp"
                android:textColor="@color/neo_primary_dark"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tvMockTrack2Preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="9704189991010867647=3101..."
                android:textSize="14sp"
                android:textColor="@color/neo_text_label"
                android:fontFamily="monospace" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Amount Display -->
    <LinearLayout
        android:id="@+id/amountContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VND"
            android:textSize="28sp"
            android:textColor="@color/neo_primary_dark"
            android:fontFamily="sans-serif-medium"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/tvAmountDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="52sp"
            android:textColor="@color/neo_primary_dark"
            android:fontFamily="sans-serif-bold"
            tools:text="52,687" />
    </LinearLayout>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/layoutLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80FFFFFF"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateTint="@color/neo_primary_dark" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
