<?xml version="1.0" encoding="utf-8"?>
<!-- Mini Transaction Item for Recent List -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp"
    android:background="@color/neo_surface"
    android:layout_marginBottom="8dp">

    <!-- Status Icon -->
    <ImageView
        android:id="@+id/ivStatus"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_check_circle"
        app:tint="@color/neo_status_connected"
        tools:src="@drawable/ic_check_circle" />

    <!-- Transaction Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/tvTraceNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/neo_primary_dark"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            tools:text="Trace: 000123" />

        <TextView
            android:id="@+id/tvTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/neo_text_label"
            android:textSize="12sp"
            tools:text="10:30 AM" />
    </LinearLayout>

    <!-- Amount -->
    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/neo_primary_dark"
        android:textSize="16sp"
        android:fontFamily="sans-serif-bold"
        tools:text="500,000 VND" />

</LinearLayout>
