<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Modern primary button style used across screens -->
    <style name="AppButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">56dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/btn_on_primary</item>
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:elevation">2dp</item>
        <item name="rippleColor">#1AFFFFFF</item>
    </style>

</resources>

