<?xml version="1.0" encoding="utf-8"?>
<!-- Neo-Fintech Premium Receipt Layout -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neo_bg_light"
    android:padding="16dp">

    <!-- ══════════════════════════════════════════════════════════════════ -->
    <!--            LOTTIE ANIMATION PLACEHOLDER (Success/Fail)             -->
    <!-- ══════════════════════════════════════════════════════════════════ -->
    <FrameLayout
        android:id="@+id/animationContainer"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Placeholder for LottieAnimationView -->
        <!-- Replace with: com.airbnb.lottie.LottieAnimationView -->
        <ImageView
            android:id="@+id/ivResultIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_check_circle"
            android:scaleType="fitCenter"
            app:tint="@color/neo_status_connected"
            tools:src="@drawable/ic_check_circle" />
    </FrameLayout>

    <!-- Status Text -->
    <TextView
        android:id="@+id/tvResultStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="APPROVED"
        android:textColor="@color/neo_status_connected"
        android:textSize="24sp"
        android:fontFamily="sans-serif-bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/animationContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="APPROVED" />

    <!-- ══════════════════════════════════════════════════════════════════ -->
    <!--                    RECEIPT CARD (Torn Paper Style)                 -->
    <!-- ══════════════════════════════════════════════════════════════════ -->
    <LinearLayout
        android:id="@+id/receiptCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_receipt_card"
        android:padding="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="8dp"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvResultStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Amount Section -->
        <TextView
            android:id="@+id/tvAmountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AMOUNT"
            android:textColor="@color/neo_text_label"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/tvAmountValue"
            style="@style/NeoAmountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500,000 VND"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            tools:text="500,000 VND" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E7EF"
            android:layout_marginVertical="16dp" />

        <!-- Receipt Details Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Row: Merchant -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Merchant"
                    android:textColor="@color/neo_text_label"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tvMerchantName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MySoftPOS"
                    android:textColor="@color/neo_primary_dark"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    tools:text="MySoftPOS" />
            </LinearLayout>

            <!-- Row: Terminal ID -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Terminal ID"
                    android:textColor="@color/neo_text_label"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tvTerminalId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00000001"
                    android:textColor="@color/neo_primary_dark"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    tools:text="00000001" />
            </LinearLayout>

            <!-- Row: Trace Number -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Trace No."
                    android:textColor="@color/neo_text_label"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tvTraceNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000123"
                    android:textColor="@color/neo_primary_dark"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    tools:text="000123" />
            </LinearLayout>

            <!-- Row: Date/Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Date/Time"
                    android:textColor="@color/neo_text_label"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tvDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03/02/2026 11:15"
                    android:textColor="@color/neo_primary_dark"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    tools:text="03/02/2026 11:15" />
            </LinearLayout>

            <!-- Row: Response Code -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Response Code"
                    android:textColor="@color/neo_text_label"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tvResponseCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00 - Approved"
                    android:textColor="@color/neo_status_connected"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-bold"
                    tools:text="00 - Approved" />
            </LinearLayout>
        </LinearLayout>

        <!-- Zig-Zag Bottom Edge (Visual Separator) -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitXY"
            android:tint="#E0E7EF"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>

    <!-- ══════════════════════════════════════════════════════════════════ -->
    <!--                    ACTION BUTTONS                                  -->
    <!-- ══════════════════════════════════════════════════════════════════ -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/receiptCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Print Button (Outlined) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Print"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="@color/neo_primary_dark"
            android:textColor="@color/neo_primary_dark"
            app:cornerRadius="16dp"
            android:layout_marginEnd="8dp" />

        <!-- Done Button (Gradient) -->
        <Button
            android:id="@+id/btnDone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Done"
            style="@style/NeoPayButton"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
