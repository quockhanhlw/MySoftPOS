<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="28dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/amount_hint"
        android:gravity="center"
        android:textColor="@color/text_secondary"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:textSize="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="Ä‘"
            android:textColor="@color/text_secondary"
            android:textSize="18sp"
            android:layout_marginTop="12dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvMoreInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/more_info"
        android:gravity="center"
        android:textColor="@color/primary"
        android:textSize="12sp"
        android:layout_marginTop="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Keypad -->
    <GridLayout
        android:id="@+id/keypad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="false"
        android:paddingBottom="8dp">

        <!-- Row 1 -->
        <TextView
            android:id="@+id/key1"
            style="@style/KeypadKey"
            android:text="1" />
        <TextView
            android:id="@+id/key2"
            style="@style/KeypadKey"
            android:text="2" />
        <TextView
            android:id="@+id/key3"
            style="@style/KeypadKey"
            android:text="3" />
        <ImageView
            android:id="@+id/keyBackspace"
            style="@style/KeypadKeyIcon"
            android:src="@drawable/ic_close"
            android:contentDescription="Backspace" />

        <!-- Row 2 -->
        <TextView
            android:id="@+id/key4"
            style="@style/KeypadKey"
            android:text="4" />
        <TextView
            android:id="@+id/key5"
            style="@style/KeypadKey"
            android:text="5" />
        <TextView
            android:id="@+id/key6"
            style="@style/KeypadKey"
            android:text="6" />
        <View
            style="@style/KeypadKeySpacer" />

        <!-- Row 3 -->
        <TextView
            android:id="@+id/key7"
            style="@style/KeypadKey"
            android:text="7" />
        <TextView
            android:id="@+id/key8"
            style="@style/KeypadKey"
            android:text="8" />
        <TextView
            android:id="@+id/key9"
            style="@style/KeypadKey"
            android:text="9" />
        <View
            style="@style/KeypadKeySpacer" />

        <!-- Row 4 -->
        <TextView
            android:id="@+id/key0"
            style="@style/KeypadKey"
            android:text="0" />
        <TextView
            android:id="@+id/key000"
            style="@style/KeypadKey"
            android:text="000" />
        <View
            style="@style/KeypadKeySpacer" />
        <TextView
            android:id="@+id/keyDone"
            style="@style/KeypadDone"
            android:text="@string/done" />

    </GridLayout>

</LinearLayout>

